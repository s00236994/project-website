
<!--Bootstrap styled contact form !-->
<main class="container d-flex flex-column justify-content-center align-items-center" style="min-height: 80vh;">
  <h1 class="text-primary mb-4 text-center">Contact Form using GET</h1>
  <form action="submission" name=commentForm method="GET">

  <form class="w-100" style="max-width: 500px;">
    <div class="mb-3">
     <label for="firstName" class="form-label">First Name</label>
<input type="text" id="firstName" class="form-control" name="firstName" required>

<label for="lastName" class="form-label">Last Name</label>
<input type="text" id="lastName" class="form-control" name="lastName" required>


    <div class="mb-3">
      <label for="email" class="form-label">Email</label>
<input type="email" id="email" class="form-control" name="userEmail" required>
      
    </div>

    <div class="mb-3">
      <label class="form-label">How did you hear about us?</label><br>
      <div class="form-check">
        <input type="checkbox" id="internet" class="form-check-input" name="how-heard" value="internet">
        <label for="internet" class="form-check-label">Internet</label>
      </div>
      <div class="form-check">
        <input type="checkbox" id="friend" class="form-check-input" name="how-heard" value="friend">
        <label for="friend" class="form-check-label">Friend</label>
      </div>
      <div class="form-check">
        <input type="checkbox" id="social-media" class="form-check-input" name="how-heard" value="social-media">
        <label for="social-media" class="form-check-label">Social Media</label>
      </div>
      <div class="form-check">
        <input type="checkbox" id="other" class="form-check-input" name="how-heard" value="other">
        <label for="other" class="form-check-label">Other</label>
        <textarea class="form-control" id="comment" name="userComment" rows="3" required></textarea>
      </div>
    </div>

    <button type="submit" class="btn btn-primary w-100">Submit (GET)</button>
  </form>
</main>
